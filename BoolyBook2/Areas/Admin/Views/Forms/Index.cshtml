@model IEnumerable<Category>
@{
    ViewData["Title"] = "Forms";
}
<tbody>
    <tr>
        <td>
            <div class="text-center col-6 container w-100" role="group">
                <a class="btn btn-primary mx-2" id="create_button_id" onclick="createClick()">Create</a>
                <a class="btn btn-primary mx-2" id="edit_button_id" onclick="editClick()">Edit</a>
