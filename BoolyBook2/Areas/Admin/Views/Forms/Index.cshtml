    function createClick() {
        console.log("tıkladın");
        $.ajax({
            type: "GET",
            url: "@Url.Action("CreatePartial","Forms")",
            success: function(response) {

                if (response !== null) {
                    $("#forms_id").html(response)
                }
            }
        })
    };
    function editClick() {
